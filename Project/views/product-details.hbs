<div class="product-details">
    <div class="product-details-card">
    <img src="{{img}}" alt="">
    <h2>{{title}}</h2>
    <h4>Year: {{year}}</h4>
    <h4>Condition: {{condition}}</h4>
    <h3>${{price}}</h3>
    <form action="/catalogue/{{_id}}/add" method="post">
    <button type="submit">ADD TO CART</button>
    </form>
    <p>{{synopsis}}</p>
    <br>
    <hr>
    <br>
        <div class="reviews">
            <h2>Reviews</h2>
            {{#each reviewIds}}
            <h3>{{title}}</h3>
            <h4>{{rating}}</h4>
            <h4>Username: {{username}} </h4>
            <p>{{content}}</p>
            {{/each}}
        </div>
    </div>
</div>