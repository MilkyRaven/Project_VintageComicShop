<div class="product-details">
    <div class="product-details-card">
    <img src="{{comic.img}}" alt="">
    <h2>{{comic.title}}</h2>
    <h4>Year: {{comic.year}}</h4>
    <h4>Condition: {{comic.condition}}</h4>
    <h3>${{comic.price}}</h3>
    <form action="/catalogue/{{comic._id}}/add" method="post">
    <button type="submit">ADD TO CART</button>
    </form>
    <p>{{comic.synopsis}}</p>
    <br>
    <hr>
    <br>

        <div class="reviews">
            <h2>Reviews</h2>
            {{#each comic.reviewIds}}
            <h3>{{title}}</h3>
            <h4>Rating {{rating}}</h4>
            <h4>Username: {{username}} </h4>
            <p>{{content}}</p>
            {{/each}}
        </div>
    </div>
</div>